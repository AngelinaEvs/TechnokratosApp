<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/my_custom_calendar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/back_head_calendar">

        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/ic_calen_prev" />

        <TextView
            android:id="@+id/currentMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/my_fonts"
            android:gravity="center_horizontal"
            android:text="Март 2021"
            android:layout_weight="3"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_calend_next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:background="@color/background_pink">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Пн"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/my_fonts"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Вт"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/my_fonts"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ср"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/my_fonts"
            android:textColor="@color/text_color_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Чт"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/my_fonts"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Пт"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/my_fonts"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Сб"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/my_fonts"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Вс"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/my_fonts"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"/>
    </LinearLayout>

    <GridView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/daysGrid"
        android:layout_marginTop="2dp"
        tools:listitem="@layout/single_item"
        android:numColumns="7"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="2dp">
    </GridView>

</LinearLayout>